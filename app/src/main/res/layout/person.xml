<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFA"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="250dp">

        <TextView
            android:id="@+id/adult"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginLeft="75dp"
            android:gravity="center"
            android:text="성인"
            android:textColor="#FF5CA34B"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="232dp" />


        <Button
            android:id="@+id/btn_minus"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="215dp"
            android:background="@drawable/line"
            android:fontFamily="@font/diary"
            android:gravity="center"
            android:text="-"
            android:textColor="#FF5CA34B"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/tv_count"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="264dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#FF5CA34B"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="232dp" />


        <Button
            android:id="@+id/btn_add"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="314dp"
            android:background="@drawable/line"
            android:fontFamily="@font/diary"
            android:gravity="center"
            android:text="+"
            android:textColor="#FF5CA34B"
            android:textSize="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kid"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:text="청소년"
            android:textColor="#FF5CA34B"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/btn_minus1"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="208dp"
            android:background="@drawable/line"
            android:fontFamily="@font/diary"
            android:gravity="center"
            android:text="-"
            android:textColor="#FF5CA34B"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/tv_count1"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="258dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#FF5CA34B"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/btn_add1"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="305dp"
            android:background="@drawable/line"
            android:fontFamily="@font/diary"
            android:gravity="center"
            android:text="+"
            android:textColor="#FF5CA34B"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/elder"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:text="노인"
            android:textColor="#FF5CA34B"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/btn_minus2"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:background="@drawable/line"
            android:fontFamily="@font/diary"
            android:gravity="center"
            android:text="-"
            android:textColor="#FF5CA34B"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/tv_count2"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_marginLeft="260dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#FF5CA34B"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/btn_add2"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="307dp"
            android:background="@drawable/line"
            android:fontFamily="@font/diary"
            android:gravity="center"
            android:text="+"
            android:textColor="#FF5CA34B"
            android:textSize="30dp" />


    </RelativeLayout>


    <Button
        android:id="@+id/store"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/line"
        android:fontFamily="@font/diary"
        android:gravity="center"
        android:text="저장"
        android:textColor="#FF5CA34B"
        android:textSize="30dp" />

</LinearLayout>