<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFA"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:layout_marginBottom="16dp"
            android:text="sumokone"
            android:fontFamily="@font/diary"
            android:textColor="#5CA34B"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />




    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/calenderout"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:background="@drawable/line"
            android:fontFamily="@font/diary"
            android:gravity="center"
            android:text="날짜"
            android:textColor="#FF5CA34B"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/adult"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:text="성인"
            android:textColor="#FF5CA34B"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:background="@drawable/line"
            android:fontFamily="@font/diary"
            android:gravity="center"
            android:text="+"
            android:textColor="#FF5CA34B"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/tv_count"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_marginLeft="110dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#FF5CA34B"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:background="@drawable/line"
            android:fontFamily="@font/diary"
            android:gravity="center"
            android:text="-"
            android:textColor="#FF5CA34B"
            android:textSize="25dp" />

    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="110dp">

        <Button
            android:id="@+id/seoul"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="서울"
            android:textColor="#5CA34B"
            android:fontFamily="@font/diary"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="199dp" />

        <Button
            android:id="@+id/incheon"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/diary"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="경기/인천"
            android:textColor="#5CA34B"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="199dp" />

        <Button
            android:id="@+id/gangwon"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="강원"
            android:fontFamily="@font/diary"
            android:textColor="#5CA34B"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="199dp" />

        <Button
            android:id="@+id/daejon"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="충청/대전"
            android:fontFamily="@font/diary"
            android:textColor="#5CA34B"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="199dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <Button
            android:id="@+id/gyeongnam"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="경상"
            android:fontFamily="@font/diary"
            android:textColor="#5CA34B"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="199dp" />

        <Button
            android:id="@+id/jeju"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="제주"
            android:fontFamily="@font/diary"
            android:textColor="#5CA34B"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="199dp" />

        <Button
            android:id="@+id/jeolla"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="전라"
            android:fontFamily="@font/diary"
            android:textColor="#5CA34B"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="199dp" />

        <Button
            android:id="@+id/location2"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:textColor="#5CA34B"
            android:textSize="20sp"
            android:fontFamily="@font/diary"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="199dp" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="center">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:scaleType="fitXY" />

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">


        <Button
            android:id="@+id/map"
            android:layout_width="390dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line"
            android:fontFamily="@font/diary"
            android:gravity="center"
            android:text="근처 수목원"
            android:textColor="#FF5CA34B"
            android:textSize="25dp" />


    </LinearLayout>


</LinearLayout>






